<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:flipInterval="1000"
        android:inAnimation="@anim/push_left_in"
        android:outAnimation="@anim/push_left_out"
        android:persistentDrawingCache="animation" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/math_image"
                android:layout_width="fill_parent"
                android:layout_height="350dp"
                android:background="@drawable/bk_5" >
            </ImageView>

            <Button
                android:id="@+id/math_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/liner_image"
                android:layout_width="fill_parent"
                android:layout_height="350dp"
                android:background="@drawable/bk_1" >
                  </ImageView>
                 <Button
                android:id="@+id/linear_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Button" />
          </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/statistic_image"
                android:layout_width="fill_parent"
                android:layout_height="350dp"
                android:background="@drawable/bk_3" >
                  </ImageView>
                  <Button
                android:id="@+id/statistic_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Button" />
     
        </LinearLayout>
    </ViewFlipper>

</LinearLayout>