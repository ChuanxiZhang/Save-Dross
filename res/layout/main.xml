<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bk_5"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/startSave"
            android:layout_width="142dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/start_save"
            android:contentDescription="@string/start_descirption"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/drench"
            android:layout_width="142dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drench"
            android:contentDescription="@string/start_descirption"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/mainOption"
            android:layout_width="142dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/option"
            android:contentDescription="@string/start_descirption"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="142dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/exit"
            android:contentDescription="@string/start_descirption"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>