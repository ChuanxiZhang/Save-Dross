        <service
            android:name="com.SaveDross.Service.MusicService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.SaveDross.Service.MusicService" />

                <category android:name="android.intent.category.default" />
            </intent-filter>
        </service>
        <!-- //// -->
    </application>

</manifest>